<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <ImageView android:id="@+id/topo"
       android:layout_width="wrap_content"
       android:layout_height="100dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:background="#68C7F2"
       app:layout_constraintEnd_toEndOf="@id/topo"
       android:scaleType="fitStart"/>


   <ImageView android:id="@+id/titulo"
       android:layout_width="wrap_content"
       android:layout_height="100dp"
       app:layout_constraintTop_toTopOf="parent
       android:scaleType="fitStart"
       android:src="@drawable/wave"/>


   <EditText
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="50dp"
       android:layout_marginStart="60dp"
       android:layout_marginTop="252dp"
       android:background="@color/white"
       android:padding="50dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/titulo"/>

   <EditText android:id="@+id/edt_nota1"
       android:layout_height="wrap_content"
       android:layout_margin="50dp"
       android:background="@color/botao"
       android:hint="Nota 1"
       android:padding="20dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_width="wrap_content"/>

   <EditText android:id="@+id/edt_nota2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="50dp"
       android:background="@color/botao"
       android:hint="Nota 2"
       android:padding="20dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <EditText android:id="@+id/edt_nota3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="50dp"
       android:background="@color/botao"
       android:hint="Nota 3"
       android:padding="20dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/edt_nota1" />

   <EditText android:id="@+id/edt_nota4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="50dp"
       android:background="@color/botao"
       android:hint="Nota 4"
       android:padding="20dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/edt_nota2" />

   <EditText android:id="@+id/edt_faltas"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="80dp"
       android:layout_marginTop="50dp"
       android:layout_marginEnd="80dp"
       android:background="@color/botao"
       android:hint="Numero de Faltas"
       app:layout_constraintStart_toStartOf="parent"
       android:padding="15dp"
       app:layout_constraintTop_toBottomOf="@id/edt_nota3"/>

   <Button android:id="@+id/btn_calcular"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="50dp"
       android:layout_marginStart="20dp"
       android:layout_marginEnd="20dp"
       app:layout_constraintTop_toBottomOf="@id/edt_faltas"
       android:padding="15dp"
       app:cornerRadius="5dp"
       app:layout_constraintStart_toStartOf="parent"
       android:backgroundTint="@color/botao"
       android:text="CALCULAR"/>

   <TextView android:id="@+id/txt_resultado"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/btn_calcular"
       android:padding="20dp"
       app:layout_constraintStart_toStartOf="parent"
       android:background="#7AAFF4"
       android:gravity="center"
       android:textSize="24sp"
       android:textStyle="bold"
       android:layout_marginTop="50dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>